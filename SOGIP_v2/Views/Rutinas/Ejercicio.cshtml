        function EliminarEjer(id) {
            var tr = $('#boton_' + id).closest('tr');
            $.ajax({
                type: "POST",
                dataType: "JSON",
                url: '/Rutinas/DeleteEjercicio',
                data: { 'ejercicioId': id },
                success: function (data) {
                    if (data.status) {
                        location.reload();
                        //var table = $('#rutina').DataTable().row(tr).remove().draw();
                    }
                },
                error: function () {
                    alert("Fallo");
                }
            })
        }
