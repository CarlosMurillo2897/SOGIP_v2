@using Microsoft.AspNet.Identity
@using App.Extensions

@{
    ViewBag.Title = "Perfil";
}

@Styles.Render("~/Content/Perfil.css")

@*src="https://lh5.googleusercontent.com/-b0-k99FZlyE/AAAAAAAAAAI/AAAAAAAAAAA/eu7opA4byxI/photo.jpg?sz=50"*@

@*<span class="pull-right"> <input class="btn btn-warning" type="button" onclick="cerrarPaneles()" value="Cerrar Paneles"></span>*@

<br><br>
<br><br>
<div class="container">

    <div class="well span8 offset 2">

            <div class="row user-row">

                <div class="col-xs-3 col-sm-2 col-md-1 col-lg-1">

                    @if (ViewBag.Usuario.Estado == true)
                    {
                        <img class="img-circle" id="Comprobado-@ViewBag.Usuario.Id"
                             src="~/Content/Imagenes/comprobado.png"
                             style="width: 50px; height: 50px;"
                             alt="User Pic">
                    }
                    else
                    {
                        <img class="img-circle" id="Cancelar-@ViewBag.Usuario.Id"
                             src="~/Content/Imagenes/cancelar.png"
                             style="width: 50px; height: 50px;"
                             alt="User Pic">
                    }

                </div>

                <div class="col-xs-8 col-sm-9 col-md-10 col-lg-10">
                    <strong> @ViewBag.Usuario.Cedula</strong><br>
                    <strong> @ViewBag.Usuario.Nombre1 @ViewBag.Usuario.Nombre2 @ViewBag.Usuario.Apellido1 @ViewBag.Usuario.Apellido2</strong><br>
                    <span class="text-muted">Tipo de Usuario: @ViewBag.rol</span>
                </div>

                <div class="col-xs-1 col-sm-1 col-md-1 col-lg-1 dropdown-user" data-for=".@ViewBag.Usuario.Id">
                    <i class="glyphicon glyphicon-chevron-down text-muted"></i>
                </div>

            </div>

            <div class="row user-infos @ViewBag.Usuario.Id">

                <div class="col-xs-12 col-sm-12 col-md-10 col-lg-10 col-xs-offset-0 col-sm-offset-0 col-md-offset-1 col-lg-offset-1">

                    <div class="panel panel-primary">

                        <div class="panel-heading">
                            <h3 class="panel-title">Información de Usuario</h3>
                        </div>

                        <div class="panel-body">
                            <div class="row">

                                <div class="col-md-3 col-lg-3 hidden-xs hidden-sm">
                                    @if (ViewBag.Usuario.Sexo == true)
                                    {
                                        <img class="img-circle"
                                             src="~/Content/Imagenes/M.png"
                                             style="width: 100px; height: 100px;"
                                             alt="User Pic">
                                    }
                                    else
                                    {
                                        <img class="img-circle"
                                             src="~/Content/Imagenes/W6.png"
                                             style="width: 100px; height: 100px; background-color:black;"
                                             alt="User Pic">
                                    }
                                </div>

                                <div class="col-xs-2 col-sm-2 hidden-md hidden-lg">
                                    @if (ViewBag.Usuario.Sexo == true)
                                    {
                                        <img class="img-circle"
                                             src="~/Content/Imagenes/M.png"
                                             style="width: 50px; height: 50px;"
                                             alt="User Pic">
                                    }
                                    else
                                    {
                                        <img class="img-circle"
                                             src="~/Content/Imagenes/W6.png"
                                             style="width: 50px; height: 50px; background-color:black;"
                                             alt="User Pic">
                                    }
                                </div>

                                <div class="col-xs-10 col-sm-10 hidden-md hidden-lg">
                                    <strong>@ViewBag.Usuario.Nombre1 @ViewBag.Usuario.Nombre2 @ViewBag.Usuario.Apellido1 @ViewBag.Usuario.Apellido2</strong><br>
                                    <dl id="tabla1-@ViewBag.Usuario.Id">
                                        <dt>Nombre:</dt>
                                        <dd>@ViewBag.Usuario.Nombre1 @ViewBag.Usuario.Nombre2</dd>
                                        <dt>Apellidos:</dt>
                                        <dd>@ViewBag.Usuario.Apellido1 @ViewBag.Usuario.Apellido2</dd>
                                        <dt>Fecha de Nacimiento:</dt>
                                        <dd>@ViewBag.Usuario.Fecha_Nacimiento.ToShortDateString()</dd>
                                        <dt>E-mail:</dt>
                                        <dd>@ViewBag.Usuario.Email</dd>
                                        <dt>Localidad:</dt>
                                        <dd>(vacía)</dd>
                                        <dt>Género:</dt>
                                        @if (ViewBag.Usuario.Sexo == true)
                                        {
                                            <dd>Masculino</dd>
                                        }
                                        else
                                        {
                                            <dd>Femenino</dd>
                                        }
                                        <dt>Documentos adjuntados: </dt>

                                    </dl>
                                </div>
                                <div class=" col-md-9 col-lg-9 hidden-xs hidden-sm">
                                    <strong>@ViewBag.Usuario.Nombre1</strong><br>
                                    <table class="table table-user-information" id="tabla2-@ViewBag.Usuario.Id">
                                        <tbody>
                                            <tr>
                                                <td>Nombre:</td>
                                                <td>@ViewBag.Usuario.Nombre1 @ViewBag.Usuario.Nombre2</td>
                                            </tr>
                                            <tr>
                                                <td>Apellidos:</td>
                                                <td>@ViewBag.Usuario.Apellido1 @ViewBag.Usuario.Apellido2</td>
                                            </tr>
                                            <tr>
                                                <td>Fecha de Nacimiento:</td>
                                                <td>@ViewBag.Usuario.Fecha_Nacimiento.ToShortDateString()</td>
                                            </tr>
                                            <tr>
                                                <td>E-mail:</td>
                                                <td>@ViewBag.Usuario.Email</td>
                                            </tr>
                                            <tr>
                                                <td>Localidad:</td>
                                                <td>(vacía)</td>
                                            </tr>
                                            <tr>
                                                <td>Género:</td>
                                                @if (ViewBag.Usuario.Sexo == true)
                                                {
                                                    <td>Masculino</td>
                                                }
                                                else
                                                {
                                                    <td>Femenino</td>
                                                }

                                            </tr>
                                            <tr>
                                                <td><strong>Documentos adjuntados:</strong></td>
                                            </tr>
                                            <tr>
                                                <td>Nombre:</td>
                                                <td>Tipo:</td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>

                        <div class="panel-footer">
                            @if (ViewBag.Usuario.Id == "8f9c47bf-edbd-40bf-9b5e-f753dd81a766" || ViewBag.Usuario.Id == "b889fe47-541d-4453-8733-022709c1592f")
                            {
                                <button class="btn btn-sm btn-info" type="button" id="predeterminado-@ViewBag.Usuario.Id"
                                        data-toggle="tooltip"
                                        data-original-title="Usuario no puede ser deshabilitado.">
                                    Predeterminado <i class="glyphicon glyphicon-alert"></i>
                                </button>
                            }
                            else
                            {
                                if (ViewBag.Usuario.Estado == true)
                                {
                                    <button class="btn btn-sm btn-danger" type="button" id="disable-@ViewBag.Usuario.Id"
                                            data-toggle="tooltip"
                                            data-original-title="Deshabilitar este usuario.">
                                        Deshabilitar <i class="glyphicon glyphicon-remove"></i>
                                    </button>
                                }
                                else
                                {
                                    <button class="btn btn-sm btn-success" type="button" id="enable-@ViewBag.Usuario.Id"
                                            data-toggle="tooltip"
                                            data-original-title="Habilitar este usuario.">
                                        Habilitar <i class="glyphicon glyphicon-check"></i>
                                    </button>
                                }
                            }

                            <span class="pull-right">
                                <a href="/UsersAdmin/Edit/@ViewBag.Usuario.Id" class="btn btn-sm btn-primary" type="button" data-toggle="tooltip" data-original-title="Editar este usuario.">
                                    Editar  <i class="glyphicon glyphicon-edit"></i>
                                </a>
                            </span>

                        </div>
                    </div>
                </div>
            </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/Scripts/IndexUsuarios.js")
}

