@model SOGIP_v2.Models.Estado

@{
    ViewBag.Title = "Crear Estado";
    @Styles.Render("~/Content/Detalle_Rutina.css")
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <div class="col-md-12">
        <h2 class="col-md-3" style="color: black">
            <a href="/Estados/Index/" class="btn btn-success" type="button">
                <i class="glyphicon glyphicon-chevron-left"></i>Volver al Inicio de Estados&nbsp;
            </a>
        </h2>
        <h2 class="col-md-1" style="color: black">
            |
        </h2>
        <h2 class="col-md-5" style="color: black">
            Registros > Estados > @ViewBag.Title
        </h2>
        <h2 class="col-md-1" style="color: black">
            |
        </h2>
    </div>

    <br />
    <br />
    <br />

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group" id="desc">
        @Html.LabelFor(model => model.Descripcion, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-5">
            @Html.EditorFor(model => model.Descripcion, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Crear" class="btn btn-primary" />
        </div>
    </div>
</div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}