    ViewBag.Referencia = "Rutinas/Create";
    ViewBag.Accion = "Crear Rutina";

    @Styles.Render("~/Content/Rutina.css")
    @Styles.Render("~/Content/Detalle_Rutina.css")
    @Styles.Render("~/Content/manual.css")
}

