@using Microsoft.AspNet.Identity
@using App.Extensions

@{
    @Styles.Render("~/Content/Site.css")

}
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>
    <div class="container-fluid">
        <div class="header">
            <div class="header-right">
                <a href="http://www.icoder.go.cr/" class="logo">
                    <img id="logo_SOGIP" src="~/Content/Imagenes/logo_png_header.png">
                  </a>
            </div>
            <div class="header-left">
                <a href="~/Home/Index" class="logo">
                    <img id="logo_SOGIP" src="~/Content/Imagenes/logo_SOGIP_sin_letras.png">
                </a>
            </div>
            <div class="header-center">
                <h1 class="auto-style1">
                    SISTEMA OPERATIVO GIMNASIO DE PESAS
                </h1>
            </div>

        </div>
    </div>
    @if (Request.IsAuthenticated)
    {

        <div class="container-fluid">
            <nav class="navbar" id="navbar" role="navigation">

                <div class="container-fluid">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    </div>

                    <div class="collapse navbar-collapse" id="myNavbar">
                        <ul class="nav navbar-nav navbar-center">
                            <li><a href="~/Home/Index" class="active"> <i class="fa fa-home"></i> INICIO</a></li>

                            @if (User.IsInRole("Administrador") || User.IsInRole("Supervisor"))
                            {
                                <li class="dropdown">
                                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">REGISTROS <span class="caret"></span></a>
                                    <div class="dropdown-menu">
                                        @Html.ActionLink("MANUAL", "Index", "UsersAdmin", routeValues: null, htmlAttributes: new { id = "manual" })
                                        @Html.ActionLink("MASIVO", "IndexMasivo", "UsersAdmin", routeValues: null, htmlAttributes: new { id = "masivo" })
                                        @Html.ActionLink("ESTADOS", "Index", "Estados", routeValues: null, htmlAttributes: new { id = "estado" })
                                        @Html.ActionLink("RUTINA", "Index", "Rutinas", routeValues: null, htmlAttributes: new { id = "rutina" })
                                        @Html.ActionLink("EXPEDIENTE", "Index", "ExpedientesFisicos", routeValues: null, htmlAttributes: new { id = "expedientesF" })
                                    </div>
                                </li>

                                <li>@Html.ActionLink("CITAS", "Create", "CitasAdmin", routeValues: null, htmlAttributes: new { id = "citas" })</li>



                                <li>@Html.ActionLink("BUSCAR", "Index", "Busqueda", routeValues: null, htmlAttributes: new { id = "buscar" })</li>
                            }

                            @if (User.IsInRole("Atleta") || User.IsInRole("Atleta Becados") || User.IsInRole("Funcionarios ICODER"))
                            {
                                <li>@Html.ActionLink("CITAS", "Create", "CitasGeneral", routeValues: new { id = User.Identity.GetUserId() }, htmlAttributes: new { id = "citas" })</li>
                                <li>@Html.ActionLink("RUTINA", "ListaEjercicio", "Rutinas", routeValues: new { idUsuario = User.Identity.GetUserId() }, htmlAttributes: new { id = "rutina" })</li>
                            }

                            @if (User.IsInRole("Entrenador"))
                            {
                                <li>@Html.ActionLink("RUTINAS", "Create", "Rutinas", routeValues: null, htmlAttributes: new { id = "rutina" })</li>

                            }
                        </ul>
                        <ul class="nav navbar-right">
                                    @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
                                    {
                                        @Html.AntiForgeryToken()
                                        <li class="dropdown" id="xyz">
                                            @if (User.Identity.GetSexo() == "Sexo: True")
                                            {
                                                <img class="img-circle" src="~/Content/Imagenes/M.png" alt="User Pic" , style="width:50px;height:50px;">
                                            }
                                            else
                                            {
                                                <img class="img-circle" src="~/Content/Imagenes/W6.png" alt="User Pic" , style="width:50px;height:50px; background-color:black;">
                                            }
                                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">@Html.ViewContext.HttpContext.User.Identity.GetNombre1()<span class="caret"></span></a>

                                                <ul class="dropdown-menu">
                                                    <li>
                                                        <div class="navbar-content">
                                                            <div class="row">
                                                                <div class="col-md-7">
                                                                    @Html.ActionLink("PERFIL", "Perfil", "Account", routeValues: new { id = User.Identity.GetUserId() }, htmlAttributes: new { id = "perfil" })
                                                                    @Html.ActionLink("AJUSTES", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
                                                                </div>
                                                            </div>

                                                        </div>
                                                        <hr />
                                                        <div class="navbar-footer">
                                                            <div class="navbar-footer-content">
                                                                <div class="row">
                                                                    <div class="col-md-10">
                                                                        <a href="javascript:document.getElementById('logoutForm').submit()"><span class="glyphicon glyphicon-log-in"></span> CERRAR SESIÓN</a>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </li>
                                                </ul>
                                        </li>
                                    }
                            </ul>
                           
                        </div>
                    </div>
            </nav>
        </div>
 





 
    }


    else
    { @***************************** Menú de LogIn ******************************@
    <nav class="navbar" id="navbar" role="navigation">
        <ul class="nav navbar-right">
            <li>@Html.ActionLink("Iniciar Sesión", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>@*, @class = "btn btn-default" })</li>*@
        </ul>
    </nav>
}
</body>
</html>
