@using Microsoft.AspNet.Identity
@using App.Extensions

@{
    ViewBag.Title = "Perfil";
}

@Styles.Render("~/Content/Perfil.css")

@*src="https://lh5.googleusercontent.com/-b0-k99FZlyE/AAAAAAAAAAI/AAAAAAAAAAA/eu7opA4byxI/photo.jpg?sz=50"*@

<br>
<br>
<div class="container">
    
    <div class="well span8 offset2">
        @* Este es el "card" *@
        <div class="row-fluid user-row">
            <div class="span1">
                @*if (ViewBag.Usuario.Sexo == true)
                    {
                        <img class="img-circle" src="~/Content/Imagenes/M.png" alt="User Pic" , style="width:50px;height:50px;">
                    }
                    else
                    {
                        <img class="img-circle" src="~/Content/Imagenes/W6.png" alt="User Pic" , style="width:50px;height:50px; background-color:black;">
                    }*@
                <!--span class="pull-right"-->
                @if (ViewBag.Usuario.Estado == true)
                {
                    <img class="img-circle" src="~/Content/Imagenes/comprobado.png" alt="User Pic" , style="width:50px;height:50px;">
                }
                else
                {
                    <img class="img-circle" src="~/Content/Imagenes/cancelar.png" alt="User Pic" , style="width:50px;height:50px;">
                }
                <!--/span-->
            </div>
            <div class="span10">
                <strong>@ViewBag.Usuario.Cedula</strong><br>
                <strong>@ViewBag.Usuario.Nombre1 @ViewBag.Usuario.Nombre2 @ViewBag.Usuario.Apellido1 @ViewBag.Usuario.Apellido2</strong><br>
                <span class="text-muted">Tipo de usuario: @ViewBag.rol</span>
            </div>
            <!----div class="span1 dropdown-user" data-for=".cyruxx">
                <i class="icon-chevron-down text-muted"></i>
            </!--div-->
        </div>
        <div class="row-fluid user-infos cyruxx">
            <div class="span10 offset1">
                <div class="panel panel-primary">
                    @* Esto es lo azul. *@
                    <div class="panel-heading">
                        <h3 class="panel-title">Información General</h3>
                    </div>
                    <div class="panel-body">
                        <div class="row-fluid">
                            <div class="span3">
                                @if (ViewBag.Usuario.Sexo == true)
                                {
                                    <img class="img-circle" src="~/Content/Imagenes/M.png" alt="User Pic" , style="width:100px;height:100px;">
                                }
                                else
                                {
                                    <img class="img-circle" src="~/Content/Imagenes/W6.png" alt="User Pic" , style="width:100px;height:100px; background-color: black;">
                                }
                            </div>
                            <div class="span6">
                                <br />
                                <strong>@ViewBag.Usuario.Nombre1</strong><br>
                                <br />
                                <table class="table table-condensed table-responsive table-user-information">
                                    <tbody>
                                        <tr>
                                            <td>Nombre:</td>
                                            <td>@ViewBag.Usuario.Nombre1 @ViewBag.Usuario.Nombre2</td>
                                        </tr>
                                        <tr>
                                            <td>Apellidos:</td>
                                            <td>@ViewBag.Usuario.Apellido1 @ViewBag.Usuario.Apellido2</td>
                                        </tr>
                                        <tr>
                                            <td>Fecha de nacimiento:</td>
                                            <td>@ViewBag.Fecha</td>
                                        </tr>
                                        <tr>
                                            <td>Email:</td>
                                            <td>@ViewBag.Usuario.Email</td>
                                        </tr>
                                        <tr>
                                            <td>Localidad:</td>
                                            <td>(vacía)</td>
                                        </tr>
                                        <tr>
                                            <td>Género:</td>
                                            @if (ViewBag.Usuario.Sexo == true)
                                            {
                                                <td>Masculino</td>
                                            }
                                            else
                                            {
                                                <td>Femenino</td>
                                            }
                                        </tr>
                                        <tr>
                                            <td><strong>Documentos adjuntados:</strong></td>
                                        </tr>
                                        <tr>
                                            <td>Nombre:</td>
                                            <td>Tipo: </td>
                                        </tr>

                                        @if (ViewBag.Archivos != null)
                                        {

                                            foreach (var doc in ViewBag.Archivos)
                                            {
                                                <tr>
                                                    <td>@doc.Nombre</td>
                                                    <td>@doc.Tipo</td>
                                                    <td>
                                                        @using (Html.BeginForm("Download", "UsersAdmin", routeValues: new { Documento = @doc.ArchivoId }))
                                                        {
                                                            @*using (Html.BeginForm("Download", "UsersAdmin", FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
                                                            *@
                                                            @*Html.ActionLink("Descargar", "Create", "UsersAdmin", routeValues: new { Documento = @doc.ArchivoId }, htmlAttributes: new { enctype = "multipart/form-data", @class="btn" })*@
                                                            <input type="submit" class="btn btn-info" id="btn_sub_form" value="Descargar" />
                                                        }

                                                    </td>
                                                </tr>
                                            }
                                        }

                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <div class="panel-footer">
                        <span class="pull-left">
                            <input type="button" class="btn btn-danger" value="Inhabilitar" style="height:45px;" />
                        </span>
                        <span class="pull-right">
                            @Html.ActionLink("Editar", "Edit", "UsersAdmin", routeValues: new { id = User.Identity.GetUserId() }, htmlAttributes: new { id = "editar", @class = "btn btn-warning", @type = "button" })
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

