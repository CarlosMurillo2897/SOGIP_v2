@model SOGIP_v2.Models.Rutina
@{
    ViewBag.Title = "Lista de Rutinas";

    ViewBag.Control = "Rutinas";
    ViewBag.ControlIcono = "glyphicon-user";

    ViewBag.Metodo = "Index";
    ViewBag.MetodoIcono = "glyphicon-edit";

    ViewBag.Referencia = "Rutinas/Create";
    ViewBag.Accion = "Crear Rutina";

    @Styles.Render("~/Content/Rutina.css")
    @Styles.Render("~/Content/Detalle_Rutina.css")
    @Styles.Render("~/Content/manual.css")
}

<style>
    .image-preview-input {
        position: relative;
        overflow: hidden;
        margin: 0px;
        color: #333;
        background-color: #fff;
        border-color: #ccc;
    }

        .image-preview-input input[type=file] {
            position: absolute;
            top: 0;
            right: 0;
            margin: 0;
            padding: 0;
            cursor: pointer;
            opacity: 0;
            filter: alpha(opacity=0);
        }

    .image-preview-input-title {
        margin-left: 2px;
    }

    .glyphicon-remove {
        color: red;
    }

    #folder {
        color: #ffe698;
    }

    .glyphicon-upload {
        color: limegreen;
    }

    #upload {
        border-radius: 0px 4px 4px 0px;
    }

    .invent {
        color: limegreen;
        cursor: pointer;
    }
</style>

<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModalNew">
    Nueva Rutina
</button>
<br>
<br>
<div id="UpdatePanel">
    <table id="rutina" class="display" style="width:100%"></table>
</div>
@*Modal para crear rutina*@
<div class="modal fade" id="myModalNew">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <a href="#" class="close" data-dismiss="modal">&times;</a>
                <h3 class="modal-title">Crear Rutina</h3>
            </div>
            <div class="modal-body">
                <input type="hidden" value="original" id="hidden">
                <form id="myForm">
                    <label>Nombre de usuario</label>
                    <br>
                    <div class="form-group col-md-2">
                        <table>
                            <tr>
                                <td><input type="radio" name="Tipo_Cta" id="funcionario" checked />Funcionario</td>
                                <td><input type="radio" name="Tipo_Cta" id="atleta" />Atletas</td>
                            </tr>
                        </table>
                    </div>
                    <br />
                    <br />

                    <div class="input-group" id="cedU">
                        @* <input type="text" id="txtCed" class="form-control" />*@
                        <select class="form-control" id="usuariosDropdown" name="usuarioDropdown"></select>
                    </div>

                    <br>
                    <div class="row">
                        <div class="form-group col-md-3">
                            <label>Fecha: </label>
                            <div class="input-group date" id="dtp">
                                <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>
                                <input class="form-control" type="text" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label>Observaciones: </label>
                            <input type="text" class="form-control" placeholder="Objetivo" id="obj" />
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <a href="#" class="btn btn-default" data-dismiss="modal">Cancelar</a>
                <button type="button" id="btnSave" class="btn btn-default" style="background-color:#339966;">Guardar</button>
            </div>
        </div>
    </div>
</div>
</div>
@*Modal para editar*@
<div class="modal fade" id="myModal">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <a href="#" class="close" data-dismiss="modal">&times;</a>
                <h3 class="modal-title">Información de Rutina</h3>
            </div>
            <div class="modal-body">
                <input type="hidden" value="original" id="hidden">
                <form id="myForm">
                    <div class="form-group">
                        <label>Usuario: </label>
                        <input type="text" class="form-control" placeholder="Usuario" id="usu" />
                    </div>
                    <br>
                    <div class="row">
                        <div class="form-group col-md-3">
                            <label>Fecha: </label>
                            <div class="input-group date" id="dtp">
                                <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>
                                <input class="form-control" type="text" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label>Observaciones: </label>
                            <input type="text" class="form-control" placeholder="Objetivo" id="obj" />
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <a href="#" class="btn btn-default" data-dismiss="modal">Cancelar</a>
                <a href="#" class="btn btn-success" onclick="actualizar()">Guardar</a>
            </div>
        </div>
    </div>
</div>

