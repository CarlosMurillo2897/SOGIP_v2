@model SOGIP_v2.Models.Estado

@{
    ViewBag.Title = "Crear Estado";

    ViewBag.Control = "Estados";
    ViewBag.ControlIcono = "glyphicon-user";

    // Si existe un Método se dispone el nombre del Método en que se encuentra y el ícono que se mostrará.
    ViewBag.Metodo = "Index";
    ViewBag.MetodoIcono = "glyphicon-cloud";


    @Styles.Render("~/Content/Detalle_Rutina.css")
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
  

    <br />
    <br />
    <br />

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group" id="desc">
        @Html.LabelFor(model => model.Descripcion, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-5">
            @Html.EditorFor(model => model.Descripcion, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Crear" class="btn btn-primary" />
        </div>
    </div>
</div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}