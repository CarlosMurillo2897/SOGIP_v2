@{
    ViewBag.Title = "TipoPago";
}
<div class="container">
    <button type="button" class="btn btn-primary" id="btnNuevo">
        Nuevo Tipo Pago
    </button>
    <div id="nuevo" class="modal fade" role="dialog">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Crear Tipo de Pago</h4>
                    <br>
                    <label>Tipo de Pago: </label>
                    <input type="text" class="form-control" placeholder="Tipo" id="tipo" />
                </div>

                <div class="modal-footer">
                    <br />
                    <button type="button" id="btnSave" class="btn btn-success">Guardar Cambios</button>
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Cerrar</button>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {

    <script type="text/javascript" charset="utf8" src="~/Scripts/DataTables/jquery.dataTables.js"></script>
    <script type="text/javascript" charset="utf8" src="~/Scripts/DataTables/dataTables.select.min.js"></script>

    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/Scripts/bootstrap-datepicker.js")

    <script>
        $(document).ready(function () {
            $('#btnNuevo').click(function () {
                $('#nuevo').modal('show');
            })
            $('#btnSave').click(function () {
                var data = null;
                var descripcion = $('#tipo').val();
                if (descripcion == "") {
                    alert("Faltan Tipo");
                } else {
                    data = {
                        descripcion: descripcion
                    }
                    SaveTipo(data);
                }
            })
            function SaveTipo(data) {
                $.ajax({
                    type: "POST",
                    dataType: "JSON",
                    url: '/EstadosPagos/SaveTipo',
                    data: data,
                    success: function (data) {
                        $('#nuevo').modal('hide');
                        $('body').removeClass('modal-open');
                        alert('Registrado');
                    },
                    error: function () {
                        alert("Fallo");
                    }
                })
            }

        });
    </script>

}
