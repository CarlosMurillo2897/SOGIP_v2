@*Modal Nueva Rutina *@
<div id="nueva" class="modal fade bd-example-modal-lg" role="dialog">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Crear nueva Rutina</h4>
                <br>
                <label>Fecha Inicio de Rutina: </label>
                <div class="input-group date" id="fec">
                    <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>
                    <input class="form-control" type="text" />
                </div>

                <br>
                <label>Objetvio de la Rutina: </label>
                <input type="text" class="form-control" placeholder="Objetivo" id="obj" />
            </div>
            <div class="modal-body">
                @*Tabla de entrenadores*@
                <a class="btn btn-info" data-toggle="popover" title="¿Cómo funciona?" data-content="Seleccione el entrenador mediante un click a una casilla perteneciente a la columna acción, luego guarde los cambios">
                    <span class="glyphicon glyphicon-question-sign"></span> Ayuda
                </a>
                <hr />
                <table id="example" class="display" style="width:100%"></table>
                <div class="modal-footer">
                    <br />
                    <button type="button" id="btnSave" class="btn btn-success" data-dismiss="modal">Guardar Cambios</button>
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Cerrar</button>
                </div>
            </div>
        </div>
    </div>
</div>
